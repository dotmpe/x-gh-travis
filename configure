#!/bin/bash

# Jun 12. '15 - Using GNU.org reference to put some paths boilerplate here.

# [1] https://www.gnu.org/prep/standards/html_node/Directory-Variables.html#Directory-Variables

package=$($PWD/bin/cli-version.sh name)

prefix=/usr/local
exec_prefix=$prefix
bindir=$exec_prefix/bin
sbindir=$exec_prefix/sbin
datarootdir=$prefix/share
datadir=$datarootdir
sysconfdir=$prefix/etc
sharedstatedir=$prefix/com
localstatedir=$prefix/var
runstatedir=$localstatedir/run
includedir=$prefix/include
docdir=$datarootdir/doc/$package
infodir=$datarootdir/info
libdir=$exec_prefix/lib
localedir=$datarootdir/locale

srcdir=$PWD

# XXX: debug prints (local) env
( set -o posix ; set ; set +o posix )

